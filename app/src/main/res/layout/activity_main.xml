<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#47af64">

    <ImageView
        android:id="@+id/imVBusu"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/app_imagem"
        app:srcCompat="@drawable/screenshotbusu" />

    <TextView
        android:id="@+id/idTextViewSegaSex"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_above="@+id/listVSabado"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="@string/segundasexta" />

    <TextView
        android:id="@+id/idTextSabado"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/idTextViewSegaSex"
        android:layout_marginEnd="46dp"
        android:text="@string/sab" />

    <ListView
        android:id="@+id/listVSabado"
        android:layout_width="175dp"
        android:layout_height="384dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
    android:id="@+id/listVDiasUteis"
    android:layout_width="174dp"
    android:layout_height="384dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>